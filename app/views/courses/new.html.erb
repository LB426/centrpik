<% provide(:title, 'Новый курс') %>
<h2><p class="text-center">Создание нового курса</p></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@course) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  <%= f.label :Название_курса %>
	  <%= f.text_field :name, class: 'form-control',
		                placeholder: "введите название курса" %>

	  <%= f.label :Описание_курса %>
	  <%= f.text_area :description, placeholder: "можно использовать HTML",
		                            class: 'form-control',
									 rows: 7 %>

	  <%= f.submit "Создать курс", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>
