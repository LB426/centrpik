<% provide(:title, "Тесты") %>
<div class="row">
  <aside class="col-md-3">
	<%= render "users/left_menu" %>
  </aside>
  <div class="col-md-9">
	<table class="table">
	  <thead>
		<tr>
		  <th>#</th>
		  <th>Название теста</th>
		  <th>вопросов</th>
		  <% if current_user.admin? %>
			<th>
			  <%= link_to '<span class="glyphicon glyphicon-plus"
                           aria-hidden="true"></span>'.html_safe,
						   tests_new_path,
			               class: "btn btn-primary btn-sm",
			               "data-toggle" => "tooltip",
			               "data-placement" => "bottom",
			               title: "создать тест" %>
			</th>
			<th>&nbsp;</th>
		  <% end %>
		</tr>
	  </thead>
	  <tbody>
		<% @tests.each do |test| %>
		  <tr>
			<th scope="row"><%= test.id %></th>
			<td><%= test.name %></td>
			<td><%= test.test_questions.count %></td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-pencil"
                           aria-hidden="true"></span>'.html_safe,
						   test_edit_path(test.id),
						   :class => "btn btn-primary btn-xs" %>
			</td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-remove"
                           aria-hidden="true"></span>'.html_safe,
						   test_destroy_path(test),
						   :method => :delete,
						   :data => { confirm: "Вы уверены?" },
						   :class => "btn btn-danger btn-xs" %>
			</td>
		  </tr>
		<% end %>
	  </tbody>
	</table>
  </div>
</div>
