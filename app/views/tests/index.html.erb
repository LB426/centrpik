<h1>Тесты</h1>
<table class="table table-striped">
  <thead>
	<tr>
	  <th>#</th>
	  <th>Название теста</th>
	  <th>&nbsp;</th>
	  <th>&nbsp;</th>
	  <th>&nbsp;</th>
	</tr>
  </thead>
  <tbody>
<% @tests.each do |test| %>
  <tr>
	<th scope="row"><%= test.id %></th>
	<td><%= test.name %></td>
	<td><a class="btn btn-primary btn-xs" href="<%= testing_new_path(test,1) %>" role="button">Пройти тестирование</a></td>
	<td><a class="btn btn-success btn-xs" href="<%= testing_result_show_path(test) %>" role="button">Результат тестирования</a></td>
	<% if current_user.admin? %>
	  <td>
		<%= link_to "Редактировать", test_edit_path(test,1), :class => "btn btn-danger btn-xs" %>
	  </td>
	<% end %>
  </tr>
<% end %>
  </tbody>
</table>
