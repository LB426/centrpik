<% provide(:title, "Библиотека") %>
<div class="row">
  <aside class="col-md-4">
	<section class="micropost_form">
	</section>
	<section>
	  <p>
		<%= link_to "Програма для просмотра учебников",
		            "/library/Програма для просмотра учебников.exe",
					:class => "btn btn-info" %>
	  </p>
	  <% if current_user.admin? %>
		<p><%= link_to "Добавить книгу", new_book_path, :class => "btn btn-danger" %></p>
	  <% end %>
	</section>
  </aside>
  <div class="col-md-8">
	  <h3>Учебники и книги для самостоятельного изучения</h3>
	  <ul>
		<% @books.each do |book| %>
		  <li><%= link_to book.name, book.file.url %></li>
		<% end %>
	  </ul>
  </div>
</div>
