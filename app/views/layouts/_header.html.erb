<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
      <%= link_to "Центр ПИК", root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Библиотека",  library_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Сообщения", user_path(current_user) %></li>
                <li>
                <%= link_to "Учётная запись", edit_user_path(current_user) %>
                </li>
                <% if current_user.type == "Corporate" && current_user.cadmin %>
                  <li class="divider"></li>
                  <li><%= link_to "Сотрудники", employes_path %></li>
                  <li>
                    <%= link_to "Добавить сотрудника", employe_new_path %>
                  </li>
                  <li>
                    <%= link_to "Компания",
                    edit_company_path(current_user.companies.first) %>
                  </li>
                <% end %>
                <% if current_user.admin? %>
                  <li class="divider"></li>
                  <li><%= link_to "Пользователи", users_path %></li>
                  <li><%= link_to "Компании", companies_path %></li>				
                  <li><%= link_to "Курсы", courses_path %></li>
                  <li><%= link_to "Тесты", tests_path %></li>
                  <li><%= link_to "Видео", training_video_path %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "Выход", logout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Главная", root_path %></li>
            <li><%= link_to "Дистанционное обучение", dlearning_path %></li>
            <li><%= link_to "Контакты",  contact_path %></li>
            <li><%= link_to "Помощь",  help_path %></li>
            <li><%= link_to "Регистрация", signup_path %></li>
            <li><%= link_to "Вход", login_path %></li>
          <% end %>
        </ul>
      </nav>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
      <nav class="navbar navbar-left">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Дистанционное обучение", dlearning_path %></li>
        </ul>
      </nav>
      </div>
      <div class="col-md-6">
      <nav class="navbar navbar-right">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Очное обучение", dlearning_path %></li>
        </ul>
      </nav>
      </div>
    </div>
  </div>
</header>
