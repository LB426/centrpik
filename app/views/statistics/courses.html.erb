<div class="row">
  <aside class="col-md-3">
	<%= render "users/left_menu" %>
	</aside>
	<div class="col-md-9">
	  <h1>Результат прохождения курсов</h1>
		<table class="table">
		  <thead>
			<tr>
			  <% if current_user.admin %>
				<th>Ф.И.О.</th>
			  <% end %>
			  <th>курс</th>
			  <th>тест</th>
			  <th>&nbsp;</th>
			  <th>оценка</th>
			</tr>
		  </thead>
		  <tbody>
			<% @attempts.each do |attempt| %>
			  <tr>
				<% if current_user.admin %>
				  <td>
					<%= @user.family %>
					<%= @user.name %>
					<%= @user.otchestvo %>
				  </td>
				<% end %>
				<td>
				  <%= Course.find(attempt.course_id).name %>
				</td>
				<td><%= Test.find(attempt.test_id).name %></td>
				<td><%= link_to "результат",
			        stat_course_path( attempt.user_id,
					  attempt.test_id,
					  attempt.id) %>
				</td>
				<td><%= attempt.assessment %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	</div>
</div>
