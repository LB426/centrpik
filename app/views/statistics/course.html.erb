<div class="row">
  <aside class="col-md-3">
	<%= render "users/left_menu" %>
  </aside>
  <div class="col-md-9">

	<h4><p class="text-center">Результат прохождения теста</p></h4>
	<h2><p class="text-center"><%= @test.name %></p></h2>

	<div class="bs-callout bs-callout-info">
	  <% if current_user.admin %>
		<div class="row">
		  <div class="col-xs-8 col-sm-6">
			<p class="h3">
			  Ф.И.О. тестируемого:
			</p>
		  </div>
		  <div class="col-xs-4 col-sm-6">
			<p class="h3">
			  <%= @user.family %> <%= @user.name %> <%= @user.otchestvo %>
			</p>
		  </div>
		</div>
	  <% end %>
	  <div class="row">
		<div class="col-xs-8 col-sm-6">
		  <p class="h3">
			Всего вопросов:
		  </p>
		</div>
		<div class="col-xs-4 col-sm-6">
		  <p class="h3"><%= @attempt.numquestion %></p>
		</div>
	  </div>
	  <div class="row">
		<div class="col-xs-8 col-sm-6">
		  <p class="h3">
			Правильных ответов:
		  </p>
		</div>
		<div class="col-xs-4 col-sm-6">
		  <p class="h3"><%= @attempt.numcorrectanswers %></p>
		</div>
	  </div>
	  <div class="row">
		<div class="col-xs-8 col-sm-6">
		  <p class="h3">
			Оценка за прохождение теста:
		  </p>
		</div>
		<div class="col-xs-4 col-sm-6">
		  <h3><strong><%= @attempt.assessment %></strong></h3>
		</div>
	  </div>
	  <div class="row">
		<div class="col-xs-8 col-sm-6">
		  <p class="h3">
			Дата прохождения теста:
		  </p>
		</div>
		<div class="col-xs-4 col-sm-6">
		  <h3><%= @attempt.created_at.strftime("%Y-%m-%d %H:%M") %></h3>
		</div>
	  </div>
      <div class="row">
		<div class="col-xs-8 col-sm-6">
		  <p class="h3">
			Время прохождения теста:
		  </p>
		</div>
		<div class="col-xs-4 col-sm-6">
		  <h3>
			<% dur = @attempt.tmend - @attempt.tmbegin %>
			<%= Time.at(dur).utc.strftime('%H час %M мин %s сек') %>
		  </h3>
		</div>
	  </div>
	</div>
  </div>
</div>
