<% provide(:title, "Компании") %>
<div class="row">
  <div class="col-md-1"><h4>Компании</h4></div>
  <% if current_user.admin? %>
  <div class="col-md-2 col-md-offset-9">
	<%= link_to "Создать компанию", new_company_path,
	                                :class => "btn btn-primary btn-block" %>
  </div>
  <% end %>
</div>
<table class="table">
  <thead>
	<tr>
	  <th>#</th>
	  <th>Название компании</th>
	  <th>&nbsp;</th>
	  <th>&nbsp;</th>
	</tr>
  </thead>
  <tbody>
	<% @companies.each do |company| %>
	  <tr>
		<th scope="row"><%= company.id %></th>
		<td><%= company.name %></td>
		<td>
		  <%= link_to "Редактировать", edit_company_path(company),
                                       :class => "btn btn-danger btn-xs" %>
		</td>
		<td>
		  <%= link_to "Удалить", company_path(company),
                                 :method => :delete,
		                         :data => { confirm: "Вы уверены?" },
		                         :class => "btn btn-danger btn-xs" %>
		</td>
	  </tr>
	<% end %>
  </tbody>
</table>
