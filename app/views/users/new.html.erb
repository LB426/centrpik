<% provide(:title, 'Регистрация') %>
<h1>Регистрация</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>      
      <%= f.label :Имя %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :Отчество %>
      <%= f.text_field :otchestvo, class: 'form-control' %>

      <%= f.label :Фамилия %>
      <%= f.text_field :family, class: 'form-control' %>

      <%= f.label :адрес_email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :пароль %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "подтверждение паролям" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Создать учётную запись", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
