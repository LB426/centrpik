<div class="row">
  <aside class="col-md-3">
	<%= render "users/left_menu" %>
  </aside>
  <div class="col-md-9">
	<h3>
	  <p class="text-center">
		Сотрудники компании &laquo;<%= @company.name %>&raquo;
	  </p>
	</h3>
	<table class="table table-hover">
	  <thead>
		<tr>
		  <th>#</th>
		  <th>Ф.И.О</th>
		  <th>регистрация</th>
		  <th>&nbsp;</th>
		  <th>&nbsp;</th>
		  <th>
			<%= link_to '<span class="glyphicon glyphicon-plus"
                         aria-hidden="true"></span>'.html_safe,
						 employe_new_path,
			             class: "btn btn-primary btn-xs",
			             "data-toggle" => "tooltip",
			             "data-placement" => "bottom",
			             title: "создать пользователя" %>
		  </th>
		  <th>&nbsp;</th>
		</tr>
	  </thead>
	  <tbody>
		<% @users.each do |user| %>
		  <tr>
			<th scope="row"><%= user.id %></th>
			<td><%= user.family %> <%= user.name %> <%= user.otchestvo %></td>
			<td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-user"
                           aria-hidden="true"></span>'.html_safe,
						   session_changeuser_path(user),  method: :post,
						   class: "btn btn-success btn-xs" %>
			</td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-education"
                           aria-hidden="true"></span>'.html_safe,
						   stat_courses_path(user),
		                   class: "btn btn-primary btn-xs" %>
			</td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-pencil"
                           aria-hidden="true"></span>'.html_safe,
						   employe_edit_path(user),
						   class: "btn btn-primary btn-xs" %>
			</td>
		  </tr>
		<% end %>
	  </tbody>
	</table>
  </div>
</div>
