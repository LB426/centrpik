<% provide(:title, 'Пользователи') %>
<div class="row">
  <aside class="col-md-3">
	<%= render "users/left_menu" %>
  </aside>
  <div class="col-md-9">
	<table class="table table-hover">
	  <thead>
		<tr>
		  <th>#</th>
		  <th>Ф.И.О</th>
		  <th>регистрация</th>
		  <th>&nbsp;</th>
		  <th>
			<%= link_to '<span class="glyphicon glyphicon-plus"
                         aria-hidden="true"></span>'.html_safe, "#",
			             class: "btn btn-primary btn-sm",
			             "data-toggle" => "tooltip",
			             "data-placement" => "bottom",
			             title: "создать пользователя" %>
		  </th>
		  <th>&nbsp;</th>
		</tr>
	  </thead>
	  <tbody>
		<% @users.each do |user| %>
		  <tr>
			<th scope="row"><%= user.id %></th>
			<td><%= user.family %> <%= user.name %> <%= user.otchestvo %></td>
			<td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-education"
                           aria-hidden="true"></span>'.html_safe,
						   stat_courses_path(user),
						   class: "btn btn-primary btn-sm" %>
			</td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-pencil"
                           aria-hidden="true"></span>'.html_safe, edit_user_path(user),
	                       class: "btn btn-primary btn-sm" %>
			</td>
			<td>
			  <%= link_to '<span class="glyphicon glyphicon-remove"
                           aria-hidden="true"></span>'.html_safe,
						   user_path(user), method: :delete,
						   data: { confirm: "Вы уверены?" },
						   class: "btn btn-danger btn-sm" %>
			</td>
		  </tr>
		<% end %>
	  </tbody>
	</table>
	<%= will_paginate %>	
  </div>
</div>
