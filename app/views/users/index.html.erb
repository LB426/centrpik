<% provide(:title, 'Пользователи') %>
<div class="row">
  <div class="col-md-12"><%= will_paginate %></div>
</div>
<table class="table table-hover">
  <thead>
	<tr>
	  <th>#</th>
	  <th>Ф.И.О</th>
	  <th>регистрация</th>
	  <th>&nbsp;</th>
	  <th>&nbsp;</th>
	  <th>&nbsp;</th>
	</tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
  <tr>
	<th scope="row"><%= user.id %></th>
	<td><%= user.family %> <%= user.name %> <%= user.otchestvo %></td>
	<td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
	<td>
	  <%= link_to "изменить", edit_user_path(user),
	                          class: "btn btn-primary btn-sm" %>
	</td>
	<td>
	  <%= link_to "удалить", user, method: :delete,
		                           data: { confirm: "Вы уверены?" },
		                           class: "btn btn-danger btn-sm" %>
	</td>
  </tr>
<% end %>
  </tbody>
</table>



<%= will_paginate %>
