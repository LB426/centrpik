<div class="row">
  <aside class="col-md-3">
	<%= render "users/left_menu" %>
  </aside>
  <div class="col-md-9">
	<h2>Укажите идентификатор видео на Вашем канале <strong>youtube</strong></h2>
	<%= form_for(@video) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <div class="field">
		<%= f.text_field :name, placeholder: "введите название ролика" %>
	  </div>

	  <div class="field">
		<%= f.text_field :youtubelink, placeholder: "введите link" %>
	  </div>
	  
	  <%= f.submit "Загрузить", class: "btn btn-primary" %>

	<% end %>
  </div>
</div>
