<div class="row">
  <aside class="col-md-3">
	<%= render "users/left_menu" %>
  </aside>
  <div class="col-md-9">
	
	<h4><p class="text-center">Результат прохождения теста</p></h4>
	<h2><p class="text-center"><%= @test.name %></p></h2>

	  <div class="bs-callout bs-callout-info">
		<div class="row">
		  <div class="col-xs-8 col-sm-6">
			<p class="h3">
			  Всего вопросов:
			</p>
		  </div>
		  <div class="col-xs-4 col-sm-6">
			<p class="h3"><%= @stat.numquestion %></p>
		  </div>
		</div>
		<div class="row">
		  <div class="col-xs-8 col-sm-6">
			<p class="h3">
			  Правильных ответов:
			</p>
		  </div>
		  <div class="col-xs-4 col-sm-6">
			<p class="h3"><%= @stat.numcorrectanswers %></p>
		  </div>
		</div>
		<div class="row">
		  <div class="col-xs-8 col-sm-6">
			<p class="h3">
			  Оценка за прохождение теста:
			</p>
		  </div>
		  <div class="col-xs-4 col-sm-6">
			<p class="h3"><strong><%= @stat.assessment %></strong></p>
		  </div>
		</div> 
	  </div>

	<%= link_to "Посмотреть подробности ответов", testing_details_path(@test), class: "btn btn-primary" %>
  </div>
</div>
